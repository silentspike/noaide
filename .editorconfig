root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml,toml}]
indent_size = 2

[*.{ts,tsx,js,jsx,json,css}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.fbs]
indent_size = 2

[Makefile]
indent_style = tab
